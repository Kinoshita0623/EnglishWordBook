<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PracticeActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
        android:id="@+id/linearLayout3">
        <Button
                android:text="答えを見る"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/watchAnswerButton" android:layout_weight="1"/>
    <Button
            android:text="NEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nextButton" android:layout_weight="1"/>
</LinearLayout>
    <TextView
            android:text="日本語"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/japaneseText"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="english"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/englishText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/japaneseText"
            android:textSize="30sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="品詞"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/englishText"
            android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.052" android:textSize="15sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:id="@+id/partView"/>

</android.support.constraint.ConstraintLayout>